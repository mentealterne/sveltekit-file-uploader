generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Resource {
  id          String   @id @default(uuid())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  title       String
  description String
  category    Category @relation(fields: [categoryId], references: [id])
  language    Language @relation(fields: [languageId], references: [id])
  provider    Provider @relation(fields: [providerId], references: [id])
  fileUrl     String
  fileType    String
  categoryId  String
  languageId  String
  providerId  String
  roles       Role[]
}

model Category {
  id       String     @id @default(uuid())
  name     String     @unique
  resource Resource[]
}

model Language {
  id       String     @id @default(uuid())
  code     String     @unique
  name     String
  resource Resource[]
}

model Provider {
  id       String     @id @default(uuid())
  name     String     @unique
  resource Resource[]
}

model Role {
  id        String     @id @default(uuid())
  name      String     @unique
  resources Resource[]
}
